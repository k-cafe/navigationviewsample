<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary: state_checked color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="NavigationView" parent="@style/Widget.Design.NavigationView">
        <!-- default navigation menu icon's color -->
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <!-- default navigation menu text color -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="android:itemBackground">@color/colorBlack</item>
    </style>

</resources>
